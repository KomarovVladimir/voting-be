{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src/",
        "paths": {
            "@config/*": ["../config/*"]
        }
    },
    "include": ["src/**/*", "config", "src/utils/index.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
