{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src/",
        "paths": {
            "@config/*": ["../config/*"],
            "@models/*": ["./models/*"],
            "@controllers/*": ["./controllers/*"],
            "@routes/*": ["./routes/*"],
            "@utils/*": ["./utils/*"]
        }
    },
    "include": ["src/**/*", "config"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
